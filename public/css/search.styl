font_color=#dadada
info_color=#a6a6a6
drop_shadow=0 1px 3px rgba(0, 0, 0, .3)
inset_carve_shadow=inset 0 1px 1px rgba(0, 0, 0, .3), 0 1px 0 white
carve_shadow=0 1px 0 white
light_carve_shadow=0 1px 0 rgba(255, 255, 255, .5)
pallete_blue = #3aa4d9


body,h1,h2,h3,h4,h5,h6,p,ul,li
  margin 0
  padding 0

img.avatar
  width 60px
  border-radius 30px
  box-shadow drop_shadow


img.avatar-sm
  width 50px
  border-radius 25px
  box-shadow drop_shadow

.icon-search,
.icon-close
  width 30px
  height 30px
  background-repeat no-repeat

.icon-like,
.icon-download,
  height 22px
  width 22px

header
  box-shadow 0 3px 5px 0 rgba(0, 0, 0, .25);
  .logo
    float left
    margin-top 3px
    margin-right 15px
    max-width 20%
  .search
    box-shadow inset 0 2px 4px 0 rgba(0, 0, 0, .3);
    margin-top 10px
    margin-right -100%
    float left
    position relative
    width 500px
    max-width 70%
    background-color #e6e6e7
    border-radius 5px
    .icon-search
      position absolute
      top 6px
      left 6px
      background-image url("../img/icon-search.png")
    .input
      background-color transparent
      float left
      border none
      height 20px
      margin-left 40px
      width 360px
      outline none
      font-size 16px
      line-height 20px
      color #333
      padding 10px 0 10px 0
    .icon-close
      position absolute
      background-image url("../img/icon-close.png")
      top 7px
      right 6px
      opacity .8
  .msg
    animation fadeIn 0.5s
    font-size 23px
    color white
    position absolute
    margin-left 20px
    margin-top 12px

$meta-item
  position relative
  padding-left 20px
  float left
  &:before
    position absolute
    content ""
    width 22px
    height 22px
    left 0
    top 0
    display block
    background-size cover

$meta-item-sm
  position relative
  padding-left 20px
  float left
  &:before
    position absolute
    content ""
    width 16px
    height 16px
    left 0
    top 0
    display block
    background-size cover

mod_color_shadow  = #d8d8d9
mod_color_glow    = white
mod_padding_right = 15px
mod_padding_top   = 15px
// gray with a slight blue, technical gray
mod_selected_bg   = #e8e8eb
mod_bg            = #f5f5f6

.list
  .mod
    animation fadeInDown 0.6s
    border-top 1px solid mod_color_glow
    border-bottom 1px solid mod_color_shadow
    padding mod_padding_top mod_padding_right 20px 24px
    position relative
    text-shadow carve_shadow
    .meta
      font-size 14px
      color info_color
      position absolute
      right mod_padding_right
      top mod_padding_top
      padding 5px
      .star
        padding-left 20px;
        @extend $meta-item-sm
        &:before
          background-image url("../img/icon-like.png")
      .download
        margin-left 20px
        padding-left 20px;
        @extend $meta-item-sm
        &:before
          background-image url("../img/icon-like.png")
    .desc
      font-size 14px
      margin-top 5px
      color #666
    &:first-child
      border-top-color mod_bg
  .decorate
    border-top: 1px solid mod_color_glow
    height 80px
    background url("../img/dec.png") no-repeat center center
  .mod-selected
    // So that when the first item is selected, there will be 1 extra pixel come out
    top -1px
    padding-top 16px
    margin-bottom -1px
    background-color mod_selected_bg
    border-top-color mod_color_shadow
    border-bottom-color mod_selected_bg
    border-left 3px solid pallete_blue
    padding-left 21px
    &:first-child
      border-top-color mod_color_shadow

.head
  .main
    border-bottom solid 1px #e8e8e8;
    box-shadow light_carve_shadow
    .author-avatar
      float left
    .desc
      float left
      margin-left 15px
      h1.title
        margin-bottom 3px
        line-height 35px
        font-size 35px
        color #333
        display inline-block
        margin-right 10px         
      .info
        .author-name
          margin-left 5px
    .time
      padding-top 3px
      text-align right
      clear both

  .version-select
    -webkit-appearance none

    // Fixes the ugly select dropdown arrow of firefox
    // Ref: http://stackoverflow.com/questions/6787667/what-is-the-correct-moz-appearance-value-to-hide-dropdown-arrow-of-a-select#answer-18327666
    -moz-appearance none 
    // moz-appearance:none alone won't fix the problem,
    // and moz-appearance:window will disable all other styles, just like borders.
    text-indent 0.01px
    text-overflow ""
    ////////////////////////////////////////////////////

    border 1px solid #bbb
    border-radius 2px
    box-shadow carve_shadow
    outline none
    background #f5f5f5 url("../img/select-arrow.png") no-repeat calc(100% - 8px) center;
    padding 5px 20px 5px 5px
    vertical-align middle
    &:active
      box-shadow inset_carve_shadow 

.detail
  .readme
    .caption
      border-bottom solid 1px #e8e8e8
      box-shadow light_carve_shadow
      .text
        background-color #f5f5f5
        border-top 2px solid #ccc
        display inline-block
        padding 0 10px
    
$icon
    width 22px
    height 22px
    background-size cover
    position absolute

.metas
  .item
    border-bottom solid 1px #dadada
    padding 12px 0
    clear both
    &:last-child
      border-bottom none
  .top
    height 67px
  .meta
    clearfix();
    padding-bottom 5px
    .title
      padding-left 28px
    $icon
      width 22px
      height 22px
      background-size cover
      position absolute
    .icon-repo
      @extend $icon
      background-image url("../img/icon-repo.png")
    .icon-home           
      @extend $icon
      background-image url("../img/icon-home.png")
    .icon-bug
      @extend $icon
      background-image url("../img/icon-bug.png")
    .pull-right
      width 70%
      white-space nowrap;
      text-overflow ellipsis
      overflow hidden
      float right
      text-align right
  .tags
    clearfix()      
    .title
      margin-bottom 5px
    .tag
      box-shadow drop_shadow
      float left
      margin 3px 10px 5px 0px
      border-radius 10px
      padding 0 12px
      background-color white
      font-size 12px
      font-weight normal
      line-height 20px
      color info_color
      &:hover
        background-color info_color
        color white
        box-shadow inset_carve_shadow
        text-shadow 0 1px 0 rgba(0, 0, 0, .4)
  .maintainers  
    img
      margin-right 15px
      margin-top 15px

footer
  padding-bottom 10px
  border-bottom 20px solid #222
  .info
    padding-top 10px
  .footer-logo
    float right
    margin-right 20px
    width 40px
    opacity .5
  .links
    padding-right 10px
    padding-top 10px
    text-align right
    .link
      margin-right 10px
      color #666
      text-shadow 0 1px 0 #000
      &:hover
        border-bottom 1px solid #444
    .author
      margin-left 5px
      font-weight bolder
      
