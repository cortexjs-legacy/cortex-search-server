width_list      = 23%
width_article   = 77%
width_detail    = 70%
width_meta      = 30%
shadow_layout   = 0 0 8px rgba(0, 0, 0, .2)
bg_noise        = url("../img/noise-bg.png")

.list,
article,
.header,
.detail
  position relative
  box-sizing border-box

body
  background-image bg_noise

.head
  background-color #000
  background-image url("../img/header-bg.jpg")
  background-position right top
  background-repeat no-repeat
  position fixed
  width 100%
  height 60px
  padding 10px 15px
  z-index 10
  box-shadow 0 3px 5px 0 rgba(0, 0, 0, .25);   

.wrap
  clearfix()
  box-sizing border-box
  background-color #f5f5f6 
  max-width 1500px
  min-height 100%
  padding-top 80px

.list
  width width_list
  float left
  height 100%
  // overflow scroll
  z-index 1
  padding-top 20px

$content
  padding 20px 30px 0
  margin-bottom 20px

article
  box-sizing border-box
  background-image bg_noise
  float left
  width width_article
  border-left 1px solid #e5e5e7
  height 100%
  overflow scroll
  &:before
    content ""
    width width_detail
    min-height 100%
    background-color #fff
    display block
    margin 0
    z-index 0
    position absolute
    box-shadow shadow_layout

  .header
    @extend $content
    width width_detail

  .detail
    @extend $content
    width width_detail
    padding 20px 30px
    float left
    clear left
    color #666

  .metas
    width width_meta
    float left