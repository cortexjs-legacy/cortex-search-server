width_list      = 23%
width_article   = 77%
width_detail    = 70%
width_meta      = 30%
shadow_layout   = 0 0 8px rgba(0, 0, 0, .2)
bg_noise        = url("../img/noise-bg.png")

.list,
article,
.header,
.detail,
.metas
  position relative
  box-sizing border-box

:before,
:after
  box-sizing border-box

html,
body,
.wrap,
.list
.content
  height 100%

html
  min-width 320px

body
  background-image bg_noise

.head
  background-color #000
  background-image url("../img/header-bg.jpg")
  background-position right top
  background-repeat no-repeat
  position fixed
  width 100%
  height 60px
  padding 0 15px
  z-index 10

.wrap
  clearfix()
  box-sizing border-box
  background-color #f5f5f6 
  max-width 1500px
  padding-top 60px

.list,
.content
  float left
  overflow auto
  overflow-x hidden

.list
  width width_list
  z-index 1
  padding-top 20px

.content
  width width_article

article
  background-image bg_noise
  min-height 100%
  border-left 1px solid #e5e5e7
  overflow auto
  &:before
    content ""
    width width_detail
    min-height 100%
    background-color #fff
    display block
    margin 0
    z-index 0
    position absolute
    top 0
    bottom 0
    box-shadow shadow_layout

  .header,
  .detail
    padding 20px 30px 0

  .metas
    padding 0 20px

  .header
    width width_detail
  .metas
    width width_meta
    float right
    margin-top -37px
  .detail
    width width_detail
    padding 20px 30px
    float left

.footer
  height 80px

@media (max-width: 1000px)
  article
    &:before
      width: 100%
    .header,
    .metas,
    .detail,
      float none
      width 100%
    .metas
      margin-top 0
      padding 0 30px

@media (max-width: 640px)
  .list
    display none
  .content
    float none
    width 100%

    .header,
    .detail,
    .metas
      padding-left 4%
      padding-right 4%
