// Font and colors

pallete_blue = #3aa4d9

body
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size 14px
  line-height 1.42857143

h1, h2, h3, h4, h5, h6
  // font-family "Roboto Slab", "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
  font-family "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight 300

a
  text-decoration none

.list
  .mod
    .name
      font-size 22px
      color #444

.head
  .info
    color #555
    font-size 14px

  .author-name
    color pallete_blue
    font-weight bolder
    text-transform uppercase

  .time
    font-size 10px
    color #999
    text-transform uppercase

  .version-select
    font-size 15px
    color #444

.detail
  color #333
  .caption
    font-size 17px
    color #777
    font-weight 400

.metas
  color #999